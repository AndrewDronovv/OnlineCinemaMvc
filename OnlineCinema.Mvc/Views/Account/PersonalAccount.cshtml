@using OnlineCinema.Mvc.Services.CurrentUser
@inject ICurrentUserService currentUserService

@{
    string account = currentUserService.IsAuthenticated ? currentUserService.Name : "Личный кабинет";
}

<div class="container">
    <h1 class="text-white mt-3">Здравствуйте, @account</h1>
    <div class="buttons mt-3">
        <button class="btn btn-outline-primary personal__account__button">МОИ БИЛЕТЫ</button>
        <button class="btn btn-outline-primary personal__account__button">ЛИЧНЫЕ ДАННЫЕ</button>
        <button class="btn btn-outline-primary personal__account__button">ВЫХОД</button>
    </div>
    <h3 class="text-white mt-4">Мои заказы</h3>
</div>
