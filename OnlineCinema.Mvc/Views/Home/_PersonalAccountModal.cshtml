<div class="modal" tabindex="-1" id="PersonalAccountModal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
           
            <div class="modal-header">
                <div class="d-flex justify-content-start me-5">
                    <ul class="nav nav-underline pb-3" role="tablist">
                        <li class="nav-item me-3">
                            <a class="nav-link active" id="LoginTab" data-bs-toggle="tab" href="#Login" role="tab">ВХОД</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="RegistrationTab" data-bs-toggle="tab" href="#Registration" role="tab">РЕГИСТРАЦИЯ</a>
                        </li>
                    </ul>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="tab-content" id="myTabContent">
                <!-- Вход -->
                <div class="tab-pane fade show active" id="Login" role="tabpanel">
                    <div class="container-fluid">
                        <div class="row d-flex justify-content-between align-items-center">

                            <div class="container-fluid mb-2">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col">
                                        <p class="mt-2">Способ авторизации</p>

                                        <ul class="nav nav-pills mb-2" id="pills-tab" role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link active" id="EmailBtn" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab">Email</button>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link" id="PhoneBtn" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab">Телефон</button>
                                        </ul>
                                    </div>
                                    <div class="col">
                                        <p>
                                            Нажимая кнопку входа, вы принимаете условия <a href="#">Пользовательского соглашения</a>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="input-group mb-3" id="EmailWrapper">
                                    <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                                    <input id="Email" type="text" class="form-control" placeholder="Ваш email">
                                </div>
                                <div class="input-group mb-3 d-none" id="PhoneWrapper">
                                    <span class="input-group-text"><i class="fa-solid fa-mobile-screen-button"></i></span>
                                    <input id="Phone" type="text" class="form-control" placeholder="Ваш номер телефона">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-solid fa-unlock-keyhole"></i></span>
                                    <input id="Password" type="text" class="form-control" placeholder="Пароль">
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="FlexCheckIndeterminate">
                                        <label class="form-check-label ms-2" for="FlexCheckIndeterminate">Запомнить меня</label>
                                    </div>
                                    <a href="#">Забыли пароль?</a>
                                </div>
                                <button type="button" class="btn btn-primary w-100 mt-3 mb-3" id="Login">Войти</button>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Регистрация -->
                <div class="tab-pane fade" id="Registration" role="tabpanel">
                    <div class="container mt-3">
                        <p>Укажите ваши данные</p>
                        <div class="row">
                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-solid fa-mobile-screen-button"></i></span>
                                    <input type="text" class="form-control" placeholder="Ваш номер телефона" id="PhoneRegistration">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-regular fa-circle-user"></i></span>
                                    <input type="text" class="form-control" placeholder="Ваше имя" id="NameRegistration">
                                </div>
                                <div class="input-group mb-3 has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend3"><i class="fa-solid fa-lock"></i></span>
                                    <input type="password" class="form-control" id="EnterPassword" aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" required placeholder="Придумайте пароль">
                                    <div id="EnterPasswordValidation" class="invalid-feedback">
                                    </div>
                                </div>
                                <p style="font-size: 12px;">Пароль должен содержать цифры, заглавные и строчные буквы. Длина пароля не менее 6 символов.</p>
                            </div>

                            <div class="col-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                                    <input type="email" class="form-control" placeholder="Введите ваш email" id="EmailRegistration">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-regular fa-circle-user"></i></span>
                                    <input type="text" class="form-control" placeholder="Ваша фамилия" id="SurnameRegistration">
                                </div>
                                <div class="input-group mb-3 has-validation">
                                    <span class="input-group-text" id="inputGroupPrepend3"><i class="fa-solid fa-lock"></i></span>
                                    <input type="password" class="form-control" id="RepeatPassword" aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" required placeholder="Повторите пароль">
                                    <div id="ConfirmPasswordValidation" class="invalid-feedback">
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fa-solid fa-venus-mars"></i></span>
                                    <select id="GenderRegistration" class="form-select">
                                        <option disabled selected>Укажите ваш пол</option>
                                        <option>Мужской</option>
                                        <option>Женский</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Хочу получать информацию о новостях и акциях компании Киномакс.
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Я принимаю условия Пользовательского соглашения и даю согласие на обработку моих данных.
                            </label>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-primary w-50 mb-3 mt-3" id="RegistrationBtn">Зарегистрироваться</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>