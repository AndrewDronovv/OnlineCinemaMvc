@model IEnumerable<NewsViewModel>

<h1 class="text-white mb-5 mt-5">Новости</h1>
<div class="container-fluid">
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-4">
                <div class="card mb-3">
                    <a asp-controller="News" asp-action="GetNewsById" asp-route-id="@news.Id">
                        <img src="@news.ImagePath" class="card-img-top" alt="Some picture">
                    </a>
                    <div class="card-body background-card-color">
                        <a class="card-news-text" asp-controller="News" asp-action="GetNewsById" asp-route-id="@news.Id">
                            <h5 class="card-title">@news.Name</h5>
                        </a>
                        <p>@news.Description</p>
                        <p class="card-text"><small class="text-body-secondary">@news.Date.ToString("f")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>