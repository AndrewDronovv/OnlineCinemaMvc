@model IEnumerable<NewsViewModel>

<h1 class="text-white mb-5 mt-5">Новости</h1>
<div class="container-fluid">
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100 news__card__custom">
                    <a asp-controller="News" asp-action="GetNewsById" asp-route-id="@news.Id">
                        <img src="@news.ImagePath" class="card-img-top" alt="Some picture">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <a class="mb-auto" asp-controller="News" asp-action="GetNewsById" asp-route-id="@news.Id">
                            <h5 class="card-title">@news.Name</h5>
                        </a>
                        <div class="text-white-50">
                            <p>@news.Description</p>
                            <p class="card-text mt-auto"><small>@news.Date.ToString("f")</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>